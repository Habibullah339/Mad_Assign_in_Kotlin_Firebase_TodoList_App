<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_root"
    android:background="#001E2B"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <androidx.cardview.widget.CardView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        >

        <TextView
            android:id="@+id/display_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="50dp"
            android:textColor="#F7BA2F"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/display_name2"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginLeft="50dp"
           android:layout_marginTop="40dp"
            android:text="TextView"
            android:textColor="#A8CF45"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/display_name"
            app:layout_constraintHorizontal_bias="@+id/display_name"
            app:layout_constraintStart_toStartOf="@+id/display_name"
            app:layout_constraintTop_toBottomOf="@+id/display_name"
            app:layout_constraintVertical_bias="0.117" />

        <ImageButton
            android:id="@+id/updatebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="80dp"
            android:outlineSpotShadowColor="@color/teal_700"
            app:layout_constraintEnd_toEndOf="@+id/display_name2"
            app:layout_constraintHorizontal_bias="@+id/display_name2"
            app:layout_constraintStart_toStartOf="@+id/display_name2"
            app:layout_constraintTop_toBottomOf="@+id/display_name2"
            android:background="@color/white"
            android:onClick="updatefunction"

            />

        <ImageButton
            android:id="@+id/deletbtn"
            android:outlineSpotShadowColor="@color/teal_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="290dp"
            app:layout_constraintEnd_toEndOf="@+id/display_name2"
            app:layout_constraintHorizontal_bias="@+id/display_name2"
            app:layout_constraintStart_toStartOf="@+id/display_name2"
            app:layout_constraintTop_toBottomOf="@+id/display_name2"
            android:background="@color/white"
            android:onClick="realdelet"

            />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>